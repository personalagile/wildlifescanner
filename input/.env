# Aktivierung
TRACKING_ENABLED=true
ZOOM_ENABLED=true

# Ausgabe-Mindeströße
MIN_OUTPUT_WIDTH=960
MIN_OUTPUT_HEIGHT=540

# Sampling (reaktiver & gleichmäßiger)
FRAME_STRIDE=2

# Smoothing (kleinere Werte = weicher/langsamer)
TRACKING_CENTER_ALPHA=0.04
TRACKING_SIZE_ALPHA=0.03

# Pro-Frame-Limits (kleiner = weniger “Springen”)
TRACKING_MAX_MOVE_FRAC=0.04
TRACKING_MAX_ZOOM_FRAC=0.05

# Deadzones (größer = ignoriert mehr Kleinbewegungen)
TRACKING_CENTER_DEADZONE_FRAC=0.14
TRACKING_ZOOM_DEADZONE_FRAC=0.20

# Zusätzlicher Rand ums Motiv (Puffer gegen Mikro-Zittern)
TRACKING_MARGIN=0.25

# Optional: Logging
LOG_LEVEL=INFO
