# Paths
INPUT_DIR=/path/to/input
OUTPUT_DIR=/path/to/output

# Detector selection
DETECTOR=YOLO  # YOLO | MEGADETECTOR
YOLO_MODEL=yolov8n.pt
MEGADETECTOR_MODEL=/path/to/megadetector.pt  # optional; if unset, falls back to YOLO_MODEL
ANIMAL_CLASSES=bird,cat,dog,horse,sheep,cow,elephant,bear,zebra,giraffe

# A/B testing
AB_TEST=false
AB_DETECTORS=YOLO,MEGADETECTOR

# Inference / Filters
CONFIDENCE_THRESHOLD=0.25
NMS_IOU=0.45
FRAME_STRIDE=5

# Segmentation
PREROLL_SEC=1.0
POSTROLL_SEC=2.0
MIN_ACTIVITY_SEC=0.5
MERGE_GAP_SEC=1.0

# Watcher / Stability
FILE_STABILITY_SECONDS=3
POLL_INTERVAL_SECONDS=1.0

# Logging
LOG_LEVEL=INFO

# Post-processing (zoom/tracking)
# Enable optional zoom/tracking and control whether to keep processed files alongside originals.
# When KEEP_POSTPROCESSED=true, processed files are saved with _zoom/_track suffix instead of
# replacing the original clip.
ZOOM_ENABLED=false
TRACKING_ENABLED=false
KEEP_POSTPROCESSED=false
